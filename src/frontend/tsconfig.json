{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    // if i set true using vite i have problem with vue-class-component
    "useDefineForClassFields": false,
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "Node",
    "experimentalDecorators": true,
    "allowJs": true,
    "esModuleInterop": true,
    "outDir": "build",
    "noImplicitAny": false,
    "strictFunctionTypes": false,
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "skipLibCheck": true,
    "types": ["vite/client"],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "typeRoots": ["node_modules/@types", "typings.d.ts", "env.d.ts"]
  },
  "ts-node": {
    "transpileOnly": true,
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "include": [
    "./**/*"
  ],
  "files": [
    "typings.d.ts",
    "env.d.ts"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
