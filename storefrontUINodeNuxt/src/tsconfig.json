{
	// https://v3.nuxtjs.org/concepts/typescript
	"extends": "./.nuxt/tsconfig.json",
	"compilerOptions": {
    "target": "esnext",
    "module": "esnext",
		"outDir": "./.output",
		"strict": true,
		"skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
		"types": [
			"@vueuse/nuxt",
			"@nuxt/types",
			"@nuxtjs/i18n",
			"@pinia/nuxt",
			"@nuxt/image-edge",
			"unplugin-icons/types/vue"
		],
		"typeRoots": ["node_modules/@types", "global.d.ts", "components.d.ts", "custom.d.ts"]
	},
	"files": ["global.d.ts", "components.d.ts", "custom.d.ts"]
}
